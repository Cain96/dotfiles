# Load all zsh config files in numbered order
# Prefix convention:
#   000-0xx: Base configuration
#   010-0xx: Shell/tool foundation
#   1xx:     Development tool helpers
#   2xx:     Git helpers
#   3xx:     Other utilities

ZSHHOME="${HOME}/.config/zsh"

[ -d "$ZSHHOME" ] && for i in "$ZSHHOME"/*.zsh; do
    [ -r "$i" ] && . "$i"
done
